# i3status configuration file.
# see "man i3status" for documentation.

general {
  colors = true
  color_good = "{{content.good}}"
  color_bad = "{{content.bad}}"
  interval = 1
  separator = "  "
  output_format = "none"
}

order += "disk /"
order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  # if you use %speed, i3status requires root privileges
  format_up = "%ip"
  format_down = "disconnected"
}

volume master {
  format = " %volume"
  format_muted = " %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

battery all {
  format = "%status %percentage %remaining"
}

tztime local {
  format = " %a %Y-%m-%d   %H:%M:%S "
}

load {
  format = " %1min"
}

disk "/" {
  format = " %avail"
  low_threshold = 50
  threshold_type = percentage_avail
}
