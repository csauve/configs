[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[settings]
screenchange-reload = true
;pseudo-transparency = true

[global/wm]
margin-top = 0
margin-bottom = 0
wm-restack = i3

[bar/base]
;fix transparency
;override-redirect = true
background = {{content.bg_transparent}}
foreground = {{content.fg}}
line-size = 0
border-size = {{width_small}}
border-color = {{window.border.inactive}}
padding-right = 2
padding-left = 2
module-margin = 2
font-0 = {{font}}:pixelsize={{font_size}};2
font-1 = {{font_icons}}:pixelsize={{font_size}};3
dpi-x = {{dpi}}
dpi-y = {{dpi}}

[bar/saturn]
inherit = bar/base
bottom = true
modules-left = workspace title
modules-right = free volume date

[module/title]
type = internal/xwindow
label-maxlen = 80

[module/workspace]
type = internal/i3
pin-workspaces = true
enable-click = true
label-focused-foreground = {{content.fg_focused}}
label-padding = 0
label-urgent-foreground = {{content.fg_urgent}}
label-separator = " "
label-separator-padding = 0

[module/volume]
type = internal/pulseaudio
mapped = true
label-muted =  Mute
label-muted-foreground = {{red}}
format-muted = <label-muted>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = {{green}}
format-volume = <ramp-volume> <label-volume>

[module/free]
type = internal/fs
mount-0 = /
interval = 10
fixed-values = true
label-mounted = %free%
format-mounted-prefix = " "
format-mounted-prefix-foreground = {{yellow}}
format-mounted = <label-mounted>

[module/date]
type = internal/date
interval = 1
date = "%a %b %d"
time = %H:%M:%S
format-prefix =   
format-prefix-foreground = {{blue}}
label = " %time%, %date%"

